
<div ng-app="myApp" ng-controller="ordersCtrl">

    <div ng-hide="isAddForm">
        <button ng-click="isAddForm=true;" class="btn btn-default btn-xs">Add Order</button>
    </div>
    <div ng-show="isAddForm">
        <input type="hidden" name="userid" value="1" ng-model="newOrder.userid" />
        <p>Tracking ID: <input type="text" name="trackingId" ng-model="newOrder.trackingId" required /></p>
        <p>First Name: <input type="text" name="firstName" ng-model="newOrder.firstName" required /></p>
        <p>First Name: <input type="text" name="lastName" ng-model="newOrder.lastName" required /></p>
        <p>Order Date <input type="text" name="orderDate" ng-model="newOrder.orderDate" required/></p>
        <p>Address Line 1 <input type="text" name="AddressLine1" ng-model="newOrder.addressLine1" required /></p>
        <p>Address Line 2 <input type="text" name="AddressLine2" ng-model="newOrder.addressLine2" required /></p>
        <p>City <input type="text" name="City" ng-model="newOrder.city" required /></p>
        <p>State <input type="text" name="State" ng-model="newOrder.state" required /></p>
        <p>Postal Code <input type="text" name="PostalCode" ng-model="newOrder.postalCode" required /></p>
        <button ng-click="addOrder()" class="btn btn-default btn-xs">Add</button>
        <button ng-click="isAddForm=false;" class="btn btn-default btn-xs">Cancel</button>
    </div>

    <div ng-repeat="x in users.orders">
        <div ng-hide="isEditForm">
            <span>Tracking ID: {{x.trackingId}}</span>
            <span>First Name: {{x.firstName}}</span>
            <span>Last Name: {{x.lastName}}</span>
            <span>Order Date {{x.orderDate}}</span>
            <span>Address Line 1 {{x.addressLine1}}</span>
            <span>Address Line 2 {{x.addressLine2}}</span>
            <span>City {{x.city}}</span>
            <span>State {{x.state}}</span>
            <span>Postal Code {{x.postalCode}}</span>
            <button ng-click="editOrder()" class="btn btn-warning btn-xs">Edit Order</button>
            <button ng-click="removeOrder()" class="btn btn-danger btn-xs">Delete Order</button>
        </div>
        <div ng-show="isEditForm">
            <p>Tracking ID: <input type="text" name="trackingId" ng-model="x.trackingId" required /></p>
            <p>First Name: <input type="text" name="firstName" ng-model="x.firstName" required /></p>
            <p>Last Name: <input type="text" name="lastName" ng-model="x.lastName" required /></p>
            <p>Order Date <input type="text" name="orderDate" ng-model="x.orderDate" required /></p>
            <p>Address Line 1 <input type="text" name="AddressLine1" ng-model="x.addressLine1" required /></p>
            <p>Address Line 2 <input type="text" name="AddressLine2" ng-model="x.addressLine2" required /></p>
            <p>City <input type="text" name="City" ng-model="x.city" required /></p>
            <p>State <input type="text" name="State" ng-model="x.state" required /></p>
            <p>Postal Code <input type="text" name="PostalCode" ng-model="x.postalCode" required /></p>
            <button ng-click="addOrder()" class="btn btn-default btn-xs">Add</button>
            <button ng-click="isEditForm=false;" class="btn btn-default btn-xs">Cancel</button>
        </div>
    </div>

</div>